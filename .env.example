# Gmail Calendar Assistant Environment Configuration

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5433/gmail_assistant"

# Google APIs Configuration (Required)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/auth/callback"

# OpenAI Configuration (Required)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4"

# Session Security (Required - generate strong random string)
SESSION_SECRET="your-session-secret-key"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Company Information (used for seeding initial data)
SALES_EMAIL="your-email@company.com"
SALES_NAME="Your Name"
COMPANY_NAME="Your Company"

# Business Hours (24-hour format)
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="17:00"
DEFAULT_TIMEZONE="America/Los_Angeles"

# Meeting Configuration
MEETING_DURATION_MINUTES=30
BUFFER_TIME_MINUTES=30
TRAVEL_BUFFER_TIME_MINUTES=60
MAX_LOOKAHEAD_DAYS=5
MIN_ADVANCE_NOTICE_HOURS=2

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Email Monitoring
CHECK_INTERVAL_MINUTES=5
MAX_EMAILS_PER_CHECK=10
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Development Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
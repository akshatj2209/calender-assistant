# Gmail Calendar Assistant Environment Configuration

# Database Configuration (Docker default)
DATABASE_URL="postgresql://postgres:password@localhost:5433/gmail_assistant"

# Google APIs Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/auth/callback"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key"

# Server Configuration
PORT=3001
NODE_ENV=development

# Business Configuration
SALES_EMAIL="your-email@company.com"
SALES_NAME="Your Name"
COMPANY_NAME="Your Company"

# Business Hours (24-hour format)
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="17:00"
TIMEZONE="America/Los_Angeles"

# Working Days (comma-separated, 0=Sunday, 1=Monday, etc.)
WORKING_DAYS="1,2,3,4,5"

# Gmail Configuration
GMAIL_LABEL_TO_MONITOR=INBOX
CHECK_INTERVAL_MINUTES=5

# Calendar Configuration
CALENDAR_ID=primary
MEETING_DURATION_MINUTES=30
BUFFER_TIME_MINUTES=30
TRAVEL_BUFFER_TIME_MINUTES=60

# Security (generate random strings for production)
JWT_SECRET="your-jwt-secret-key"
SESSION_SECRET="your-session-secret-key"

# Email Configuration (optional, for sending responses)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@company.com"
SMTP_PASS="your-app-password"

# Development Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
LOG_LEVEL="debug"

# Docker Settings (for development)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=gmail_assistant